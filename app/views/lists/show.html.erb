<div class="navbar-vanilla">
    <a class="navbar-vanilla-section" href="#">
      <img class="navbar-vanilla-logo" src="https://static.vecteezy.com/system/resources/previews/005/188/413/large_2x/cinema-logo-template-isolated-on-white-background-vector.jpg" alt="logo">
      <h2 class="navbar-vanilla-brand" >Cinemania</h2>
    </a>
    <div class="navbar-vanilla-section">
      <div class="navbar-vanilla-menu">
        <%= link_to "Add a new movie", new_list_bookmark_path(@list) %>
        <%= link_to "Go back home", lists_path  %>
      </div>
      <div class="navbar-vanilla-profile">
        <%= image_tag('Screenshot 2023-05-11 at 7.05.05 pm.png', alt: 'Profile Picture') %>

        <ul>
          <li><a href="#">Profile</a></li>
          <li><a href="#">About us</a></li>
          <li><a href="#">Login</a></li>
        </ul>
      </div>
    </div>
</div>

<div class="container mt-3">
  <h1><%= @list.name %>:</h1>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col mb-4">
        <div class="card-movie">
          <%= image_tag bookmark.movie.poster_url %>
          <div class="card-pick-info">
            <h2><%= bookmark.movie.title %></h2>
            <p><%= bookmark.comment %></p>
            <h4>
              <%= link_to bookmark_path(bookmark),
              method: :delete,
              data: { turbo_confirm: "Are you sure?" },
              title: "Delete",
              "data-bs-toggle": "tooltip",
              "data-bs-placement": "top",
              "aria-label": "Delete" do %>
              <i class="fa-solid fa-trash fa-lg"></i>
              <% end %>
            </h4>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
